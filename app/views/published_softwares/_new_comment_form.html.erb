<%= form_for @comment do |f| %>

  <%= render 'shared/form/errors', f: f, label: :Review %>
  <%= render 'shared/form/hidden_field', f: f, name: :user_id, value: current_user.id %>
  <%= render 'shared/form/hidden_field', f: f, name: :commentable_id, value: @comment.commentable_id %>
  <%= render 'shared/form/hidden_field', f: f, name: :commentable_type, value: @comment.commentable_type %>
  <%= render 'shared/form/text_area', f: f, name: :body, rows: 4, label: false, placeholder: "..." %>
  <%= render 'shared/form/submit_button', f: f, submit_label: "Post Review", submit_fa: 'send' %>

<% end %>