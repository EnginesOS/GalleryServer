<div class="col-sm-12">
  <% if admin_signed_in? %>
    <div class="top-gap">
      <%= render 'published_softwares/admin_show_actions', published_software: @published_software %>
    </div>
  <% end %>
  <div class="top-gap">
    <%= render 'published_softwares/show_actions', published_software: @published_software %>
  </div>
</div>

<%= render 'published_softwares/software_icon_title_detail', published_software: @published_software %>

<div class="col-sm-12">
  <%= render 'published_softwares/tags', published_software: @published_software,
          search: params[:search], page: params[:page], tags: params[:tags]  %>
</div>

<div class="col-sm-12 top-gap">
    <%= render 'published_softwares/info', published_software: @published_software %>
    <%= render 'published_softwares/fees', published_software: @published_software %>
    <%= render 'published_softwares/reviews', published_software: @published_software %>
    <%= render 'published_softwares/screenshots', published_software: @published_software %>
    <%= render 'published_softwares/videos', published_software: @published_software %>
</div>
