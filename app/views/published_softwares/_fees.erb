<% if published_software.fees_comment.present? || published_software.fees_button_url.present? %>

  <div class="top-gap col-sm-12">
    <legend>Pricing</legend>
  </div>

  <div class=" col-sm-8 col-sm-offset-2">
      <% if published_software.fees_comment.present? %>
        <p><%= published_software.fees_comment %></p>
      <% end %>
      <% if published_software.fees_button_url.present? %>
        <p>
          <% fees_button_url = published_software.fees_button_url
             fees_button_label = published_software.fees_button_label
             fees_button_label = 'Donate' if fees_button_label.blank? %>
          <%= link_to (content_tag(:i, nil, class: "fa fa-external-link") + " " + fees_button_label), fees_button_url, class: "btn btn-default btn-lg", target: "_" + published_software.title.delete("^a-zA-Z0-9") %>
        </p>
      <% end %>
  </div>
<% end %>
