<div class="software_review_panel top-gap panel panel-info">
  <div class="panel-heading">
    <i class="fa fa-star-half-empty"></i> Reviews (<%= @comments.count %>)
  </div>
  <div class="panel-body" style="max-height: 400px;overflow-y: scroll;">
    <% if @comments.present? %>
      <div class="col-sm-8 col-sm-offset-2">
        <% @comments.order('created_at DESC').each do |comment| %>
          <div class="top-gap panel panel-default">
            <div class="panel-heading">
              <%= comment.user.username %>
              <small><%= (distance_of_time_in_words comment.created_at, DateTime.now) + ' ago' %></small>
            </div>
            <div class="panel-body">
              <%= comment.body %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <i>none</i>
    <% end %>
  </div>
</div>
<% if current_user %>
  <div id="published-software-review-form" class="top-gap panel panel-info">
    <div class="panel-heading">
      Write a Review
    </div>
    <div class="panel-body">
      <%= render 'published_softwares/new_comment_form' %>
    </div>
  </div>
<% end %>