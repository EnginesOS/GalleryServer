<div class="col-md-12 clearfix">
  <%= render 'sub_navbar' %>
  <h2><%= content_tag :i, nil, class: "fa fa-camera" %> Screenshots</h2>
</div>

<div class="col-md-12 top-gap">
  <div id="screenshots_carousel" class="carousel slide" data-interval="false" data-ride="carousel">
    <!-- Indicators -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <%= image_tag ('screenshots/desktop.png') %>
        <div class="carousel-caption">
          Desktop
        </div>
      </div>
      <div class="item">
        <%= image_tag ('screenshots/control_panel.png') %>
        <div class="carousel-caption">
          Control panel
        </div>
      </div>
      <div class="item">
        <%= image_tag ('screenshots/find_software.png') %>
        <div class="carousel-caption">
          Install applications from libraries
        </div>
      </div>
      <div class="item">
        <%= image_tag ('screenshots/installer_basic.png') %>
        <div class="carousel-caption">
          Basic installer
        </div>
      </div>
      <div class="item">
        <%= image_tag ('screenshots/installer_advanced.png') %>
        <div class="carousel-caption">
          Advanced installer
        </div>
      </div>
      <div class="item">
        <%= image_tag ('screenshots/installing.png') %>
        <div class="carousel-caption">
          Applications install automatically
        </div>
      </div>
      <div class="item">
        <%= image_tag ('screenshots/connected_services.png') %>
        <div class="carousel-caption">
          Connect services to applications
        </div>
      </div>
      <div class="item">
        <%= image_tag ('screenshots/configure_services.png') %>
        <div class="carousel-caption">
          Configure services
        </div>
      </div>
      <div class="item">
        <%= image_tag ('screenshots/registry.png') %>
        <div class="carousel-caption">
          View the registry
        </div>
      </div>
      <div class="item">
        <%= image_tag ('screenshots/network_properties.png') %>
        <div class="carousel-caption">
          Update application properties
        </div>
      </div>
      <div class="item">
        <%= image_tag ('screenshots/updating.png') %>
        <div class="carousel-caption">
          Update your system
        </div>
      </div>
      <div class="item">
        <%= image_tag ('screenshots/bug_report.png') %>
        <div class="carousel-caption">
          Bug catcher <small>(let's hope you don't need it!)</small>
        </div>
      </div>

    </div>
  </div>

  <a class="btn btn-default btn-lg top-gap" href="#screenshots_carousel" role="button" data-slide="prev">
      <i class="fa fa-chevron-left"></i> Previous
  </a>
  <a class="btn btn-default btn-lg top-gap" href="#screenshots_carousel" role="button" data-slide="next">
      Next <i class="fa fa-chevron-right"></i>
  </a>
</div>
