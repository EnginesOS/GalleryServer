<div id="pages_sub_nav_placemarker"></div>
<div id="pages_sub_nav" class="top-gap btn-group">
  <%= link_to((content_tag(:i, '', class: 'fa fa-hand-o-right').html_safe + " Overview"), overview_path, class: "btn btn-lg btn-default trigger-response-modal #{ params[:action] == 'overview' ? "active" : "" }") %>
  <%= link_to((content_tag(:i, '', class: 'fa fa-floppy-o').html_safe + " Install"), install_path, class: "btn btn-lg btn-default trigger-response-modal #{ params[:action] == 'install' ? "active" : "" }") %>
  <%= link_to((content_tag(:i, '', class: 'fa fa-camera').html_safe + " Screenshots"), screenshots_path, class: "btn btn-lg btn-default trigger-response-modal #{ params[:action] == 'screenshots' ? "active" : "" }") %>
  <% if false %>
    <%= link_to content_tag(:i, "", class: "fa fa-smile-o") + " User stories", user_stories_path, class: "btn btn-lg btn-default trigger-response-modal" %>
  <% end %>
  <%= link_to content_tag(:i, "", class: "fa fa-video-camera") + " Software videos", software_videos_path, class: "btn btn-lg btn-default trigger-response-modal #{ params[:action] == 'software_videos' ? "active" : "" }" %>
  <%= link_to content_tag(:i, "", class: "fa fa-code") + " Technical brief", technical_brief_path, class: "btn btn-lg btn-default trigger-response-modal #{ params[:action] == 'technical_brief' ? "active" : "" }" %>
</div>
