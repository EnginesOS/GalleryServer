<%  items ||= []
    model_name = items.model_name.to_s
    label ||= model_name.humanize
    new_item_path ||= [:new, model_name.underscore] %>

<div class="top-gap">
  <% items.each do |item| %>
    <div class="panel panel-info">
      <div class="panel-body">
        <%= (ap item.as_json, plain: true, index: false).html_safe %>
        <div class="btn-group pull-right">
          <%= link_to content_tag(:i , nil, class: 'fa fa-arrow-right') + ' Show', item, class: 'btn btn-lg' %>
          <%= link_to content_tag(:i , nil, class: 'fa fa-edit') + ' Edit', [:edit, item], class: 'btn btn-lg' %>
          <%= link_to content_tag(:i , nil, class: 'fa fa-trash') + ' Delete', item, method: :delete, class: 'btn btn-lg', data: { confirm: 'Are you sure that you want to destroy this ' + label + '?', confirm_title: 'Confirm destroy' } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
