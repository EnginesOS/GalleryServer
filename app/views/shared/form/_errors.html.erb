<% form_object = f.object
   label ||= form_object.class.to_s.humanize %>

<% if form_object.errors.any? %>
  <div class="col-sm-8 col-sm-offset-2 top-gap">
    <div id="error_explanation" class='well error-well'>
      <h4><%= pluralize(form_object.errors.count, "error") %> prohibited the <%= label %> from being created:</h4>

      <ul>
      <% form_object.errors.each do |attribute, error| %>
        <li>
          <%  if error.class == Array
                attribute = error[0]
                error = error[1]
              end
              if attribute.class == Symbol
                attribute = attribute.to_s.humanize
              end %>
          <%= attribute.to_s.humanize + ' ' + error + '.' %>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>
