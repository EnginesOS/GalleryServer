<%  class_name ||= nil
    association_field = name.to_s + '_id'
    association_model = ( class_name || name ).to_s.camelcase.constantize
    offset ||= 2
    width ||= 8
    buffer ||= 2
    nest_in ||= false

    label ||= name.to_s.humanize

    collection = association_model.all.collect {|l| [ l.name, l.id ] }

    %>

<%= render partial: 'shared/form/select', locals: {name: association_field, label: label, collection: collection, f: f, offset: offset, width: width, buffer: buffer, nest_in: nest_in } %>


