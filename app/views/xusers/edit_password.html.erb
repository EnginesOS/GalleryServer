<%= content_tag :div, class: 'col-sm-12' do %>

  <%= content_tag :h1 do %>
    <%= content_tag(:i, '', class: 'fa fa-lock') %> Edit password for <%= @user.username %>
  <% end %>

  <%= content_tag :div, class: 'top-gap' do %>

    <%= form_for @user, url: edit_password_user_path(), method: :patch do |f| %>

      <%= render 'shared/form/errors', f: f, label: :Review %>
      <%= render 'shared/form/password_with_confirmation', f: f, name: :password %>
      <%= render 'shared/form/cancel_and_submit_buttons', f: f %>

    <% end %>

  <% end %>

<% end %>
