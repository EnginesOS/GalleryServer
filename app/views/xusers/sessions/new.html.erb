<h2><%= content_tag :i, '', class: 'fa fa-sign-in' %> Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><%= f.label :username %><br />
  <%= f.text_field :username, autofocus: true %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<div class="btn-group-vertical">
  <%= link_to (content_tag(:i, '', class: 'fa fa-lock').html_safe + " Forgot your password?"), new_user_password_path() %>
  <%= link_to((content_tag(:i, '', class: 'fa fa-send').html_safe + " Resend email address confirmation."), new_user_confirmation_path) %>
  <%= link_to((content_tag(:i, '', class: 'fa fa-user-plus').html_safe + " Not registered? Sign up."), new_user_registration_path, class: "btn-sm trigger-response-modal") %>
</div>

